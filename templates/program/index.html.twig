{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Programs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Poster</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td> <a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></td>
                <td>{{ program.summary }}</td>
                <td>{{ program.poster }}</td>
                <td><a href="{{ path('season_index') }}">saisons</a></td>
                <td>
                    <a href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
                    {%  if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {%  if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('program_new') }}">Create new</a>
    {% endif %}
    <a href="{{ path('season_index') }}">Season List</a>
{% endblock %}
